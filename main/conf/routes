# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Order
GET     /shipment                   controllers.Checkout.shipment
POST    /shipment                   controllers.Checkout.setshipment(shipment: String)
GET     /payment                    controllers.Checkout.payment
POST    /payment                    controllers.Checkout.setpayment

# Account
GET     /account                    controllers.Application.account

# Authentication
GET     /login                      controllers.Application.login
POST    /login                      controllers.Application.authenticate
GET     /logout                     controllers.Application.logout

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
